<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--namespace=绑定一个对应的mapper借口-->
<mapper namespace="com.gongbing.dao.UserMapper">
    <select id="getUserList" resultType="com.gongbing.entity.User">
        select * from mybatis.user
    </select>

    <select id="getUserById" parameterType="int" resultType="com.gongbing.entity.User">
        select  * from user where id=#{id}
    </select>

    <insert id="saveUser" parameterType="com.gongbing.entity.User">
        insert into user (id, name, pwd) values(#{id}, #{name}, #{pwd})
    </insert>

    <insert id="saveUserWithMap" parameterType="map">
        insert into user (id, name, pwd) values (#{userId}, #{userName}, #{userPwd})
    </insert>

    <select id="getUserLike" resultType="com.gongbing.entity.User">
        select * from user where name like #{value}
    </select>
</mapper>